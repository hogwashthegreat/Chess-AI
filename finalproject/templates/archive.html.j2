{% block body %}

<link rel="stylesheet" href="static/css/chessboard-1.0.0.css">
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="static/js/chessboard-1.0.0.js"></script>


<div class="header">
  <a href="#default" class="logo">Extengine</a>
  <div class="header-right">
    <a class="active" href="mainpage"> Playing Board </a>
    <a class = "active" href="logoutconfirmation"> Logout </a>
    
  </div>
</div>

<div id = "container3">

<div id="board1" style="width: 600px"></div>
<button id="startBtn" class = "active">Start Position</button>
<button id="clearBtn">Clear Board</button>
<script>
  var config = {
    draggable: true,
    dropOffBoard: 'snapback', // this is the default
    position: '{{FEN}}' 
  } 
  var board = Chessboard('board1', config)
  $('#startBtn').on('click', board.start)
  $('#clearBtn').on('click', board.clear)
</script>

